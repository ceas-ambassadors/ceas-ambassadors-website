extends ../layout

block content
  link(rel='stylesheet' href='/stylesheets/signup_login.css')
  div(class="container")
    div(class='box-border')
      h1 Login
      form(id='login', action='login', method='post')
        input(type='text', name='email', placeholder='6+2@mail.uc.edu', class='entry')
        input(type='password', name='password', placeholder='Password', class='entry')
        input(type='submit', name='login', value='Login')